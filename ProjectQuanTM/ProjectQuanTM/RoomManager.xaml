<Window x:Class="ProjectQuanTM.RoomManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectQuanTM"
        mc:Ignorable="d"
                Title="RoomManager" Height="450" Width="800">
    <Grid Background="#FFB8C0C4">

        <ListView Name="listRooms" SelectionChanged="room_SelectionChanged"
      Margin="24,56,272,204" BorderBrush="#89FFFFFF" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"
                        Width="130"
                        DisplayMemberBinding="{Binding Path=Id}" />
                    <GridViewColumn Header="Tên"
                        Width="160"
                        DisplayMemberBinding="{Binding Path=Name}" />
                    <GridViewColumn Header="Giá"
                        Width="130"
                        DisplayMemberBinding="{Binding Path=Price}" />
                    <GridViewColumn Header="Trạng Thái"
                        Width="80"
                        DisplayMemberBinding="{Binding Path=Status}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnDelete"
    Content="Delete"
    HorizontalAlignment="Left"
    Margin="335,326,0,0"
    VerticalAlignment="Top"
    Height="36"
    Width="194"
    Background="#FFA56B59"
    FontFamily="Kozuka Mincho Pr6N B"
    Foreground="Black"
    BorderBrush="White" Click="btnDelete_Click"
     >
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="40"
        CornerRadius="20"
        Background="{TemplateBinding Background}" Margin="6,-17,7,-10">
                        <ContentPresenter VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Update"
    x:Name="btnUpdate"
    HorizontalAlignment="Left"
    Margin="350,263,0,0"
    VerticalAlignment="Top"
    Height="36"
    Width="164"
    Background="#FFCACA6F"
    FontFamily="Kozuka Mincho Pr6N B"
    Foreground="Black"
    BorderBrush="White" Click="btnUpdate_Click"
     >
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="40"
                CornerRadius="20"
                Background="{TemplateBinding Background}" Margin="6,-17,7,-10">
                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnInsert"
    Content="Insert"
    HorizontalAlignment="Left"
    Margin="580,0,0,0"
    VerticalAlignment="Center"
    Height="53"
    Width="164"
    Background="#FFA4CCD1"
    FontFamily="Kozuka Mincho Pr6N B"
    Foreground="Black"
    BorderBrush="White" Click="btnInsert_Click"
    >
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="150" Height="40"
        CornerRadius="20"
        Background="{TemplateBinding Background}" Margin="6,-17,7,-10">
                        <ContentPresenter VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Quản Lý Phòng"
   HorizontalAlignment="Left"
   VerticalAlignment="Top"
   Height="72"
   FontStyle="Normal"
   FontWeight="DemiBold"
   Width="295"
   Foreground="White"
   FontSize="40" Margin="254,-7,0,0" />
        <TextBox Name="tbCID"
     Visibility="Hidden"
     HorizontalAlignment="Left"
     Margin="528,47,0,0"
     TextWrapping="Wrap"
     VerticalAlignment="Top"
     Width="120"
     Text="{Binding Path=CustomerId, Mode=OneWay}"
     DataContext="{Binding ElementName=lvCus, Path=SelectedItem}" />
        <TextBox  x:Name="tbName"
        HorizontalAlignment="Left"
        Margin="554,70,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" TextChanged="tbName_TextChanged" />
        <TextBox  x:Name="tbPrice"
        HorizontalAlignment="Left"
        Margin="554,128,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" />
        <TextBox  x:Name="tbId"
        HorizontalAlignment="Left"
        Margin="24,253,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" IsReadOnly="True" />
        <TextBox  x:Name="tbNameUpdate"
        HorizontalAlignment="Left"
        Margin="24,299,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" />
        <TextBox  x:Name="tbPriceUpdate"
        HorizontalAlignment="Left"
        Margin="24,344,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" />
        <TextBox  x:Name="tbStatus"
        HorizontalAlignment="Left"
        Margin="24,396,0,0"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Width="216"
        Height="28" Background="White" />
    </Grid>
</Window>
